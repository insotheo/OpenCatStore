<UserControl x:Class="OpenCatStoreApp.CustomControls.StoreItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenCatStoreApp.CustomControls"
             mc:Ignorable="d"
             HorizontalAlignment="Stretch"
             HorizontalContentAlignment="Stretch"
             d:DesignHeight="130" d:DesignWidth="800">
    <Border Background="{StaticResource SecondaryBackgroundBrush}"
            BorderThickness="3"
            BorderBrush="{StaticResource BorderBrush}"
            CornerRadius="5"
            Margin="0 5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Name="AppNameTB" FontSize="38" FontWeight="SemiBold" VerticalAlignment="Center"/>
            <TextBlock Name="AuthorTB" Grid.Row="1" VerticalAlignment="Top" FontSize="24"/>
            <TextBlock Name="LanguageTB" Grid.Row="2" VerticalAlignment="Bottom" FontSize="18"/>
            <Button Grid.Row="0" Content="DOWNLOAD" Margin="0 5" HorizontalAlignment="Right" Name="InstallBtn"/>
            <Button Grid.Row="1" Content="GO TO GITHUB PAGE" HorizontalAlignment="Right" Name="GoToGithubPageBtn"/>
            <Button Grid.Row="2" Content="VIEW DESCRIPTION" HorizontalAlignment="Right" Name="ViewDescriptionBtn"/>
        </Grid>
    </Border>
</UserControl>
