<UserControl x:Class="OpenCatStoreApp.CustomControls.TopWindowMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenCatStoreApp.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="800">
    <Grid Background="{StaticResource BorderBrush}" Name="TopWindowGrid">
        <TextBlock Text="OpenCatStore 🐈‍" FontWeight="SemiBold" FontSize="28" VerticalAlignment="Center"/>

        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
            <Button Content="_" Name="MinWindowBtn"/>
            <Button Content="▭" Name="MaxWindowBtn"/>
            <Button Content="X" Name="CloseWindowBtn"/>
        </StackPanel>
    </Grid>
</UserControl>
